<%- include('../partials/header'); -%>

    <div class="row">
        <div style="width:30%; margin: 20px auto;">
            <form action = "/reset/<%= token%>" method = "POST">
                <Legend>Reset Password?</Legend>
                <div class="form-group">
                    <label>New Password</label>
                    <input class="form-control" type = "password" name = "password" placeholder= "New Password" autofocus="autofocus">
                </div>
                 <div class="form-group">
                    <label>Confirm Password</label>
                    <input class="form-control" type = "password" name = "confirm" placeholder= "Confirm Password">
                </div>
                <div class="form-group">
                    <input type="submit" class= "btn btn-primary btn-block" value="Reset Password">
                </div>
            </form>
        </div>
    </div>


<%- include('../partials/footer'); -%>

