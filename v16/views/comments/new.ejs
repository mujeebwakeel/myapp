<%- include('../partials/header'); -%>

<div style="max-width:60rem; width:90%; margin:10px auto;">
   <div class="row">
        <div class="col-xs-12" >
            <h1 style="text-align:center"> Add New Comment to <%= campground.name%></h1>
            <form action = "/campgrounds/<%= campground._id %>/comments" method = "POST">
                
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea id="comment" class="form-control" name = "comment[text]">comment</textarea>
                </div>
                 <div class="form-group">
                     <label for="rating" >Rating(1-5)</label>
                    <input id="rating" class="form-control" type = "text" name = "rating" placeholder = "please rate the campground" min="1.0" max="5.0" step="0.1">
                </div>
                
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p>
                 <a href="/campgrounds/<%=campground._id%>">Go back</a>
            </p>
        </div>
    </div>
</div>


<%- include('../partials/footer'); -%>
