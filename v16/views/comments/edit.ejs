<%- include('../partials/header'); -%>

<div style="max-width:60rem; width:90%; margin:10px auto;">
   <div class="row">
        <div class="col-xs-12" >
            <h1 style="text-align:center"> Edit Comment</h1>
            <form action = "/campgrounds/<%= campgroundId %>/comments/<%= comment._id%>?_method=PUT" method = "POST">
                
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea id="comment" class="form-control" name = "comment[text]"><%= comment.text%></textarea>
                </div>
                
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p>
                 <a href="/campgrounds/<%= campgroundId%>">Go back</a>
            </p>
        </div>
    </div>
</div>


<%- include('../partials/footer'); -%>
