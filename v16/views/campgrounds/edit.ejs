<%- include('../partials/header'); -%>

<div style="max-width:60rem; width:90%; margin:10px auto;">
    <div class="row">
        <div class="col-xs-12">
            <h1 style="text-align:center"> Edit <%=campground.name %></h1>
            <form action = "/campgrounds/<%= campground._id%>?_method=PUT" method = "POST" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" type = "text" name = "name" value = "<%= campground.name%>">
                </div>
                
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" type = "file" name = "image" accept="image/*">
                </div>
                
                <div class="form-group"> 
                    <label> Description </label>
                    <textarea class="form-control" name="description"><%= campground.description%></textarea>
                </div>
                
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control" type = "number" name = "price" value = "<%= campground.price%>"  min="2.0" step="0.01">
                </div> 
                 
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <p>
                 <a href="/campgrounds/<%= campground._id%>">Go back</a>
            </p>
        </div>
    </div>
</div>


<%- include('../partials/footer'); -%>