<%- include('../partials/header'); -%>

<div style="max-width:60rem; width:90%; margin:10px auto;">
    <div class="row">
        <div class="col-xs-12">
            <h1 style="text-align:center">Print this page and come with it on your appointment. Thank you</h1>
            <h1 style="text-align:center">Your Booking Details</h1>
            <form action="" method="">
                
                <div class="form-group">
                    <label>First Name</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.firstName%>" readonly>
                </div>
                
                <div class="form-group">
                    <label>Last Name</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.lastName%>" readonly>
                </div>
                
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.email%>" readonly>
                </div>

                <div class="form-group">
                    <label>Number of family members</label>
                    <input class="form-control" type="number" name="" value="<%= bookingInfo.familyMembers%>" readonly>
                </div>

                <div class="form-group">
                    <label>Camp Name</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.campName%>" readonly>
                </div>
                
                <div class="form-group">
                    <label>Camping Day(s)</label>
                    <br/>
                    <label for="from">From</label> <input type="text" name="" value="<%= bookingInfo.from%>" readonly /> <label for="to">to</label> <input type="text" name="" value="<%= bookingInfo.to%>" readonly/>
                </div>

                <div class="form-group">
                    <label>Amount Paid</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.amountPaid%>" readonly>
                </div>

                <div class="form-group">
                    <label>Booking Date</label>
                    <input class="form-control" type="text" name="" value="<%= bookingInfo.bookingDate%>" readonly>
                </div>

            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); -%>
