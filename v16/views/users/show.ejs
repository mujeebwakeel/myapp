<%- include('../partials/header'); -%>

 <div >  
    <div class="row">
            <h1><%= user.firstName + " " + user.lastName %></h1>
            <div class="thumbnail">
                <img class= "img-responsive" src="<%= user.avatar%>" alt="user profile image">
                <div class="caption"><a href="mailto:<%= user.email%> target='_blank' rel='noopener noreferrer'"><%= user.email%></a></div>
            </div>
            <p>
                <%= user.description%>
            </p>
       
        
            <h3><%= user.username%>'s Campgrounds</h3>
            <ul>
                <% campgrounds.forEach(function(campground){ %>
                  <li><a href="/campgrounds/<%=campground.id%>"> <%= campground.name %> </a> </li>
                <%  }); %>
            </ul>
    </div>
</div>

<%- include('../partials/footer'); -%>